    <h3 class="panel-title"><%= cryptomoney_name %></h3>
  </div>
  <div class="panel-body">


  <h1><%= @cryptomoney.symbol.upcase %></h1>
 
  <br/><br/>

  <p>
    <strong>Current Price: </strong> Â£<%= cryptomoney_price %>
  </p>

  <p>
    <strong>Rank: </strong> <%= cryptomoney_rank%>
  </p>

<p>
  <strong>Cost per:</strong>
  <%= @cryptomoney.cost_per %>
</p>

