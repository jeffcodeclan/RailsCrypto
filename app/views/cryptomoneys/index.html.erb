
<h1>Listing Cryptos</h1>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Cost per</th>
      <th>Amount owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptomoneys.each do |cryptomoney| %>
      <% if cryptomoney.user_id == current_user.id %>
        <tr>
         <td><%= cryptomoney.symbol %></td>
         <td><%= cryptomoney.cost_per %></td>
         <td><%= cryptomoney.amount_owned %></td>
         <td><%= link_to 'Show', cryptomoney %></td>
         <td><%= link_to 'Edit', edit_cryptomoney_path(cryptomoney) %></td>
         <td><%= link_to 'Destroy', cryptomoney, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
    <% end %> 
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_cryptomoney_path, class: "btn btn-default" %>
